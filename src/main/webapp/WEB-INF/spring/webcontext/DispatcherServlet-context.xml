<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:tx="http://www.springframework.org/schema/tx"
       
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.0.xsd
http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd 
  "


>
    
   
    <context:component-scan	base-package="com.mis2016bd.tpfmz"/>
    <mvc:annotation-driven/>
    <mvc:annotation-driven enable-matrix-variables="true"/>
    
    <context:property-placeholder location="/WEB-INF/hibernate/hibernate.properties" />
     
      
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" >
        <property name="driverClassName"
                  value="${jdbc.driverClassName}" />
        <property name="url" value="${jdbc.url}" />
        <property name="username" value="${jdbc.username}" />
        <property name="password" value="${jdbc.password}" />
        
    </bean>
    
    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean" >
        <property name="dataSource" ref="dataSource" />
       
        <property name="mappingResources">
            <list>
                <value>com/mis2016bd/tpfmz/modelo/Usuario.hbm.xml</value>
                <value>com/mis2016bd/tpfmz/modelo/Modulo.hbm.xml</value>
                <value>com/mis2016bd/tpfmz/modelo/Permiso.hbm.xml</value>  
                <value>com/mis2016bd/tpfmz/modelo/Perfil.hbm.xml</value>      
                <value>com/mis2016bd/tpfmz/modelo/Carrera.hbm.xml</value>
                <value>com/mis2016bd/tpfmz/modelo/Materia.hbm.xml</value>
                <value>com/mis2016bd/tpfmz/modelo/Plan.hbm.xml</value>
                <value>com/mis2016bd/tpfmz/modelo/Estadosmateria.hbm.xml</value>
                <value>com/mis2016bd/tpfmz/modelo/Materiasalumnos.hbm.xml</value>
                <value>com/mis2016bd/tpfmz/modelo/Mensaje.hbm.xml</value>		
            </list>
        </property>
        <property name="hibernateProperties">
            
            <props>
                <prop
                    key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
            </props>
        </property>
    </bean>
    <bean id="transactionManager"
          class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>
    <tx:annotation-driven transaction-manager="transactionManager"/>
    
 
    <bean	
        class="org.springframework.web.servlet.view.InternalResourceViewResolver">				
        <property name="prefix">
            <value>/WEB-INF/views/</value>
        </property>
        <property name="suffix">
            <value>.jsp</value>
        </property>
    </bean>
</beans>
